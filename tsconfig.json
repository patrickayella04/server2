{
  "compilerOptions": {
    "target": "ES2020", // output modern JS
    "module": "nodenext", // Node.js modules
    "moduleResolution": "nodenext", // Node.js module resolution
    "rootDir": "src", // where your source code lives
    "outDir": "dist", // where compiled JS goes
    "strict": true, // catch more bugs
    "esModuleInterop": true, // allow default imports
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true // skip type-checking node_modules
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
